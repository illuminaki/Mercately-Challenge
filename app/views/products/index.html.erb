<div class="flex justify-center">
  <div class="w-full max-w-6xl">
    <h1 class="text-3xl font-bold mb-6 text-center">Productos</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @products.each do |product| %>
        <div class="product bg-white rounded-lg shadow-md p-6 flex flex-col justify-between" data-product-id="<%= product.id %>">
          <div>
            <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
            <p class="text-gray-500 mb-4">Price: <%= number_to_currency(product.price) %></p>
          </div>
          <div class="mt-4">
            <button data-product-id="<%= product.id %>" class="add-to-cart buttons-bg buttons-bg-standar text-white px-4 py-2 rounded">Add to Cart</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= paginate @products %>
